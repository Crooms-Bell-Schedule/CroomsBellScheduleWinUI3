<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="CroomsBellScheduleCS.UI.Views.Settings.ProwlerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CroomsBellScheduleCS.Utils"
    xmlns:views="using:CroomsBellScheduleCS.UI.Views.Settings"
    xmlns:cui="using:CroomsBellScheduleCS.Controls"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d" Loaded="Page_Loaded">

    <Page.Resources>
        <Flyout x:Key="UserFlyout" Placement="BottomEdgeAlignedLeft">

            <Flyout.FlyoutPresenterStyle>
                <Style TargetType="FlyoutPresenter">
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="0"/>
                    <Setter Property="CornerRadius" Value="10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                </Style>
            </Flyout.FlyoutPresenterStyle>
            
            <!-- The flyout's DataContext must be the Image Source
             of the image the flyout is attached to. -->
            <Grid MinWidth="315">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Image x:Name="FlyoutBanner" Grid.Row="0" Height="175" Stretch="UniformToFill" Margin="0"/>

                <PersonPicture x:Name="FlyoutPicture" Width="64" Height="64" VerticalAlignment="Top" HorizontalAlignment="Left" Grid.Row="1" Padding="0" Margin="0, -50, 10, 0" />

                <StackPanel Grid.Row="2">
                    <TextBlock x:Name="FlyoutUserName2" Text="User Account"  FontSize="22" Margin="0, 0, 0, 0" 
             Padding="12, 5, 10, 5" TextWrapping="Wrap"/>
                    <HyperlinkButton Content="View profile" Margin="10,5,0,10" Click="HyperlinkButton_Click"></HyperlinkButton>
                </StackPanel>
            </Grid>
        </Flyout>
    </Page.Resources>

    <Grid>
        <Grid x:Name="FeedUI">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock VerticalAlignment="Center" FontSize="19">Prowler</TextBlock>
                <AppBarButton Icon="Add" Grid.Row="0" Label="New" Click="AppBarButton_Click"/>
                <AppBarButton x:Name="RefreshBtn" Icon="Refresh" Grid.Row="0" Label="Refresh" Click="Refresh_Click"/>
                <AppBarButton x:Name="DailyPollBtn" Grid.Row="0" Label="Daily Poll" Click="DailyPoll_Click">
                    <AppBarButton.Icon>
                        <FontIcon Glyph="&#xE9D2;" />
                    </AppBarButton.Icon>
                </AppBarButton>
                <AppBarButton x:Name="MAdvice" Grid.Row="0" Label="Mikhail's Advice" Click="MA_Click" Icon="PhoneBook"/>
            </StackPanel>

            <ProgressBar x:Name="ProgressUI" IsIndeterminate="True" Grid.Row="0" VerticalAlignment="Bottom"></ProgressBar>

            <InfoBar x:Name="MainInfoBar" Message="In order to post on Prowler, please verify your account" Grid.Row="1" IsOpen="True" Severity="Error" IsClosable="True">
                <InfoBar.ActionButton>
                    <Button x:Name="BtnVerify" Content="Verify" Click="BtnVerify_Click" HorizontalAlignment="Right"/>
                </InfoBar.ActionButton>
            </InfoBar>

            <ListView x:Name="FeedViewer" Grid.Row="2"
                  ScrollViewer.ZoomMode="Enabled"
                  ScrollViewer.HorizontalScrollMode="Enabled"
                  ScrollViewer.VerticalScrollMode="Enabled"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  HorizontalAlignment="Stretch"
                  SelectionMode="None" Visibility="Visible">
               
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="views:FeedUIEntry">
                        <cui:ProwlerPost Date="{x:Bind Date}"
                                         Author="{x:Bind Author}"
                                         AuthorAndID="{x:Bind AuthorAndID}"
                                         AuthorId="{x:Bind AuthorId}"
                                         ContentData="{x:Bind ContentData}"
                                         IsLoggedInUserAdmin="{x:Bind IsLoggedInUserAdmin}"
                                         Id="{x:Bind Id}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Grid x:Name="LoadingScreen" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock FontSize="38" HorizontalAlignment="Center">Loading Prowler data...</TextBlock>
                    <TextBlock x:Name="LoadingTip" VerticalAlignment="Bottom" HorizontalAlignment="Center" FontSize="28" FontWeight="Light"
                               Margin="0,50,0,0" TextWrapping="WrapWholeWords">Tip: Light mode attracts bugs</TextBlock>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>