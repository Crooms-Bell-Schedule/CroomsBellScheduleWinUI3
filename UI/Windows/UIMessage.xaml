<?xml version="1.0" encoding="utf-8"?>

<Window
    x:Class="CroomsBellScheduleCS.UI.Windows.UIMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Title="Crooms Bell Schedule">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar"
    Canvas.ZIndex="1"
    IsHitTestVisible="True"
    VerticalAlignment="Top" Grid.Row="0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>
            <Image Source="/Assets/croomsBellSchedule.ico"
         HorizontalAlignment="Left"
         Width="16"
         Height="16" Grid.Column="0" />
            <TextBlock x:Name="AppTitleBarText"
             VerticalAlignment="Center"
             TextWrapping="NoWrap"
             Style="{StaticResource CaptionTextBlockStyle}" Text="Crooms Bell Schedule Error"
             Margin="15,0,0,0" Grid.Column="1"/>
        </Grid>

        <ScrollView Grid.Row="1" HorizontalScrollMode="Enabled" VerticalScrollMode="Disabled">
            <TextBlock x:Name="TextContent" IsTextSelectionEnabled="True" TextWrapping="WrapWholeWords"/>
        </ScrollView>
        <Button Click="Button_Click" Padding="30,10,30,10" Style="{StaticResource AccentButtonStyle}" Grid.Row="2" HorizontalAlignment="Right">OK</Button>
    </Grid>
</Window>