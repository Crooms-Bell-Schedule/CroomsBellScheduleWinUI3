<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="CroomsBellScheduleCS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Crooms Bell Schedule" >

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="1" Width="32" Background="Transparent" BorderThickness="0">
            <Button.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem Text="Settings" Click="Settings_Click"></MenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <RadioMenuFlyoutItem x:Name="ALunchOption" Text="A Lunch" Click="ALunch_Click"></RadioMenuFlyoutItem>
                    <RadioMenuFlyoutItem x:Name="BLunchOption" Text="B Lunch" Click="BLunch_Click"></RadioMenuFlyoutItem>
                    <MenuFlyoutSeparator/>
                    <MenuFlyoutItem Text="Quit" Click="Quit_Click"></MenuFlyoutItem>
                </MenuFlyout>
            </Button.Flyout>
            <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xe700;"/>
        </Button>


        <TextBlock x:Name="TxtDuration" Grid.Row="0" Grid.Column="0" FontSize="16" Text="Loading"></TextBlock>
        <TextBlock x:Name="TxtCurrentClass" Grid.Row="1" Grid.Column="0" FontSize="16" Text="Loading bell schedule"></TextBlock>

        <TextBlock x:Name="TxtClassPercent" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" FontSize="17" Text="0.00%"></TextBlock>

        <ProgressBar x:Name="ProgressBar" Grid.Row="3" Height="10" Grid.ColumnSpan="2" ></ProgressBar>
    </Grid>
</Window>
