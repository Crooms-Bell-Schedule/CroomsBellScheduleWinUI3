<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="CroomsBellScheduleCS.Views.Settings.FeedView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CroomsBellScheduleCS.Utils"
    mc:Ignorable="d" Loaded="Page_Loaded">
   

    <Grid>
        <Grid x:Name="Loader">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <ProgressRing x:Name="LoadingThing" Height="64" Width="64"/>
                <TextBlock x:Name="LoadingText" HorizontalAlignment="Center">Downloading feed...</TextBlock>
            </StackPanel>
        </Grid>

        <Grid x:Name="LoggedOutView" Visibility="Collapsed">
            <InfoBar
IsOpen="True"
Severity="Error"
       IsClosable="False"
Title="Sign-in required"
Message="Please login to view the feed." />

            <TextBlock FontSize="32" VerticalAlignment="Center" HorizontalAlignment="Center">Login is required.</TextBlock>
        </Grid>

        <Grid x:Name="FeedUI" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock VerticalAlignment="Center" FontSize="19">The Feed (Beta)</TextBlock>
                <AppBarButton Icon="Add" Grid.Row="0" Label="Post" Click="AppBarButton_Click"/>
                <AppBarButton x:Name="RefreshBtn" Icon="Refresh" Grid.Row="0" Label="Refresh" Click="Refresh_Click"/>
            </StackPanel>
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ListView x:Name="FeedViewer" ItemsSource="">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="local:FeedEntry">
                            <Grid Margin="0, 0" MinHeight="25">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <PersonPicture Margin="0,0,20,0" Grid.Column="0" Width="32" Height="32"></PersonPicture>
                                <Grid Grid.Column="1" CornerRadius="{StaticResource ControlCornerRadius}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Grid.Row="0" Text="{x:Bind data, Mode=OneWay}" TextWrapping="Wrap" Padding="0, 5, 0, 0" FontSize="18"/>
                                    <TextBlock Grid.Row="1" Text="{x:Bind createdBy}" Margin="0, 5, 0, 5" FontSize="15" Foreground="{StaticResource TextFillColorSecondaryBrush}"/>
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>