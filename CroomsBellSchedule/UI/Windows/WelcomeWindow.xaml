<?xml version="1.0" encoding="utf-8"?>

<Window
    x:Class="CroomsBellSchedule.UI.Windows.WelcomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:behaviors="using:CommunityToolkit.WinUI.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d"
    Title="Crooms Bell Schedule">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar"
    Canvas.ZIndex="1"
    IsHitTestVisible="True"
    VerticalAlignment="Top" Grid.Row="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Padding="15,0,0,0">

                <Image Source="/Assets/croomsBellSchedule.ico"
         HorizontalAlignment="Left"
         Width="16"
         Height="16" Grid.Column="0" />
                <TextBlock x:Name="AppTitleBarText"
             VerticalAlignment="Center"
             TextWrapping="NoWrap"
             Style="{StaticResource CaptionTextBlockStyle}" Text="Crooms Bell Schedule"
             Margin="15,0,0,0" Grid.Column="1"/>
            </StackPanel>
        </Grid>


        <TeachingTip x:Name="ToggleThemeTeachingTip1"
    Title="Tip"
    Subtitle="To exit taskbar mode in the future, access the settings in the tray."
                     >
            <TeachingTip.HeroContent>
                <Image Source="/Assets/Settings/teach1.png" AutomationProperties.Name="Taskbar Image with Crooms Bell Schedule icon" />
            </TeachingTip.HeroContent>
        </TeachingTip>


        <ScrollView Grid.Row="1" HorizontalScrollMode="Enabled" VerticalScrollMode="Disabled">
            <StackPanel>
                <Grid Padding="0,0,0,15" HorizontalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Width="72" Height="72" Grid.Column="0">
                        <Image.Source>
                            <SvgImageSource UriSource="ms-appx:///Assets/BellSchedule.svg" />
                        </Image.Source>
                    </Image>

                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="32" Margin="10,0,0,0">Crooms Bell Schedule</TextBlock>
                    <TextBlock Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="16" Margin="10,0,0,0" Foreground="Gray">Update v5.0</TextBlock>
                </Grid>

                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Padding="0,0,0,15">Thank you for downloading the Crooms Bell Schedule app!<LineBreak/>Here are some basic settings:</TextBlock>
                    <StackPanel>
                        <ToggleSwitch x:Name="chkStartup" Header="Start when Windows starts" Toggled="chkStartup_Checked"/>
                        <ToggleSwitch x:Name="chkTaskbar" Header="Show in taskbar" Toggled="chkTaskbar_Toggled"/>
                        <TextBlock>These settings can be changed at any time in the Options menu.</TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollView>
        <Button Click="Button_Click" Padding="30,10,30,10" Style="{StaticResource AccentButtonStyle}" Grid.Row="2" HorizontalAlignment="Right">Save</Button>
    </Grid>
</Window>